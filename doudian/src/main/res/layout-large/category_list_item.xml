 <RelativeLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:padding="0dp">
     
     <LinearLayout
         android:id="@+id/categorynamecounter" 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:layout_alignParentTop="true"
         android:background="@drawable/recommend_division">
	     <TextView
	         android:id="@+id/categoryname"
	         android:layout_width="wrap_content"
	         android:layout_height="30dp"
	         android:layout_weight="1"
	         style="@android:style/TextAppearance.Large"
	         android:layout_gravity="left"
	         android:gravity="left"
	         android:padding="0dp"/>
	     
	     <TextView
	         android:id="@+id/categorycounter"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_weight="1"
	         style="@android:style/TextAppearance.Large"
	         android:layout_gravity="right"
	         android:gravity="right"
	         android:paddingRight="10dp"/>
     </LinearLayout>
     
     <cn.com.xinli.android.doudian.ui.widget.HorizontalListView.HorizontalVariableListView
         android:id="@+id/categoryhorizontallist"
	     android:layout_width="match_parent"
	     android:layout_height="wrap_content"
	     android:layout_below="@id/categorynamecounter" 
	     android:padding="0dp" />
 </RelativeLayout>