<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/multipane_half_padding">
    
	<LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">
	    <LinearLayout
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:orientation="vertical">
		    <FrameLayout
		        android:id="@+id/frameRecent"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent" >
		        <ImageView 
		            android:id="@+id/imageRecent"
		            android:layout_width="match_parent"
		            android:layout_height="match_parent"
		            android:scaleType="centerInside"
		            android:focusableInTouchMode="true"
                    android:clickable="true"
		            android:background="@drawable/metro_tile"
		            android:src="@drawable/recent_look"/>
		        <TextView 
		            android:id="@+id/imageRecentText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|left"
                    android:layout_margin="@dimen/body_padding_large"
                    android:padding="@dimen/body_padding_medium"
                    style="@style/Text_Large"
                    android:text="@string/recent_look"
                    />
		    </FrameLayout>
		    
		    <FrameLayout
		        android:id="@+id/frameFavorite"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent" >
		        <ImageView 
		            android:id="@+id/imageFavorite"
		            android:layout_width="match_parent"
		            android:layout_height="match_parent"
		            android:scaleType="centerInside"
		            android:focusableInTouchMode="true"
                    android:clickable="true"
		            android:background="@drawable/metro_tile"
		            android:src="@drawable/myfavorite"/>
		        <TextView 
                    android:id="@+id/myFavoriteText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|left"
                    android:layout_margin="@dimen/body_padding_large"
                    android:padding="@dimen/body_padding_medium"
                    style="@style/Text_Large"
                    android:text="@string/myfavorite"
                    />
		    </FrameLayout>
		</LinearLayout>
		
	    <FrameLayout
                android:id="@+id/frameRecommend"
                android:layout_width="match_parent"
                android:layout_height="match_parent" 
                android:background="@drawable/metro_tile">
                <ImageView 
                    android:id="@+id/imageRecommend1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:padding="@dimen/body_padding_medium"
                    />
                <ImageView 
                    android:id="@+id/imageRecommend2"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:padding="@dimen/body_padding_medium"
                    />
                <TextView
			        android:id="@+id/footer_1"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:layout_gravity="bottom|left"
			        android:gravity="bottom|left"
			        android:background="@drawable/recommend_text_bg"
			        android:clickable="true"
			        android:focusable="true"
			        android:paddingTop="5dip"
                    android:paddingBottom="10dip"
			        android:paddingLeft="25dip" 
			        style="@style/Text_Large"
			        android:visibility="invisible"/>
			
			    <TextView
			        android:id="@+id/footer_2"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:layout_gravity="bottom|left"
			        android:gravity="bottom|left"
			        android:background="@drawable/recommend_text_bg"
			        android:clickable="true"
			        android:focusable="true"
			        android:paddingTop="5dip"
			        android:paddingBottom="10dip"
			        android:paddingLeft="25dip" 
			        style="@style/Text_Large"
			        android:visibility="invisible"/>
			    
			    <ImageView 
                    android:id="@+id/imageRecommendMask"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/tile_recommend"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter" 
                    android:focusableInTouchMode="true"
                    android:clickable="true"/>
			    
         </FrameLayout>
			    
	     <LinearLayout
	         android:id="@+id/topFragment"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent" 
		    android:orientation="vertical"
		    android:background="@drawable/metro_tile"
		    android:descendantFocusability="afterDescendants">
	        <ImageView 
	            android:id="@+id/imageTop"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:scaleType="fitXY"
	            android:layout_weight="1"/>
		    <TextView
		        android:id="@+id/top1"
		        android:layout_width="match_parent"
		        android:layout_height="40dp"
		        android:singleLine="true"
                android:ellipsize="marquee"
		        android:marqueeRepeatLimit="marquee_forever"
		        style="@style/Text_Large"
		        android:background="@drawable/top_text_bg"
		        android:layout_weight="0" 
		        android:gravity="center_vertical"
		        android:paddingTop="5dip"
		        android:paddingBottom="5dip"
		        android:paddingLeft="20dip"
		        android:focusable="true"
		        android:focusableInTouchMode="true"
		        android:clickable="true"/>
		    <TextView
		        android:id="@+id/top2"
		        android:layout_width="match_parent"
		        android:layout_height="40dp"
		        android:singleLine="true"
                android:ellipsize="marquee"
		        android:marqueeRepeatLimit="marquee_forever"
		        style="@style/Text_Large" 
		        android:background="@drawable/top_text_bg"
		        android:layout_weight="0" 
		        android:gravity="center_vertical"
		        android:paddingTop="5dip"
		        android:paddingBottom="5dip"
		        android:paddingLeft="20dip"
		        android:focusable="true"
		        android:focusableInTouchMode="true"
		        android:clickable="true"/>
		    <TextView
		        android:id="@+id/top3"
		        android:layout_width="match_parent"
		        android:layout_height="40dp"
		        android:singleLine="true"
                android:ellipsize="marquee"
		        android:marqueeRepeatLimit="marquee_forever"
		        style="@style/Text_Large" 
		        android:layout_weight="0" 
		        android:gravity="center_vertical"
		        android:background="@drawable/top_text_bg"
		        android:paddingTop="5dip"
		        android:paddingBottom="5dip"
		        android:paddingLeft="20dip"
		        android:focusable="true"
		        android:focusableInTouchMode="true"
		        android:clickable="true"/>
		</LinearLayout> 
         
	</LinearLayout>
	<ImageView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:layout_marginTop="@dimen/multipane_half_padding"
        android:src="@drawable/shadow"/>
	
</LinearLayout>